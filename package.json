{
	"name": "hop-client-js",
	"license": "MIT",
	"packageManager": "yarn@3.2.1",
	"description": "Root workspace for hop's client library",
	"scripts": {
		"build": "yarn preconstruct build",
		"dev": "yarn preconstruct dev",
		"lint": "yarn eslint \"./{apps,packages}/**/*.{ts,tsx}\"",
		"r": "yarn build && yarn constraints --fix && yarn workspaces foreach run release"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"preconstruct": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",
		"@preconstruct/cli": "^2.1.6",
		"@typescript-eslint/eslint-plugin": "^5.30.4",
		"@typescript-eslint/parser": "^5.30.4",
		"alistair": "^1.4.3",
		"eslint": "^8.19.0",
		"eslint-config-xo": "^0.41.0",
		"eslint-config-xo-typescript": "^0.51.1",
		"prettier": "^2.7.1",
		"typescript": "^4.7.4"
	},
	"author": "Hop Development Team",
	"homepage": "https://github.com/hopinc/hop-client-js/tree/master/.",
	"keywords": [
		"realtime",
		"channels",
		"pipe",
		"client",
		"react"
	],
	"repository": "https://github.com/hopinc/hop-client-js.git",
	"dependencies": {
		"hls.js": "^1.1.5"
	}
}
